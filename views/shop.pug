extends layouts/main-layout.pug

block content
  h1 My Products
  if products.length 
    .grid 
      each product in products
        article.card.product-item 
          header.card__header
            h1.product__title #{product.title}
            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="My book")
          .card__content
            h2.product__price $10
            p.product__description Lorem ipsum dolor sit amet, consectetur adipisicing elit.
          .card__actions 
            button.btn Add to Cart
  else 
    p No products